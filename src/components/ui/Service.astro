---
import FadedText from '../ui/FadedText.astro'
import { Icon } from 'astro-icon'

export interface Props {
    logo: string;
    title: string;
    description: string;
    port: number;
}

const { logo, title, description, port } = Astro.props;
---

<div class="flex flex-col sm:flex-row items-center space-y-4 md:space-y-0 space-x-4 p-4 border border-secondary bg-terciary">
    <div class="flex items-center align-center w-1/5 md:w-2/5">
        <img src={logo} />
    </div>
    <div class="flex flex-col space-y-1">
        <FadedText>
            <p class="text-lg">{title}</p>
        </FadedText>
        <p class="text-secondary text-xs">{description}</p>
        <a class="text-secondary text-sm underline" href=`http://192.168.68.120:${port}` target="_blank">Access</a>
    </div>
</div>